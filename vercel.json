{
  "buildCommand": "prisma generate && prisma db push && next build",
  "installCommand": "npm install",
  "trailingSlash": false,
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "staffix.io" }],
      "destination": "https://www.staffix.io/:path*",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/api/telegram/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/automations",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/summarize",
      "schedule": "0 */2 * * *"
    }
  ]
}
